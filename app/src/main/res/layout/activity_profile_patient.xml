<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backColor"
    android:padding="20dp"
    tools:context=".activity.ProfilePatientActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/backColor">

        <ImageView
            android:id="@+id/ivProfilePatientBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_arrow_back_ios_24"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvProfilePatientPatientProfile"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Patient profile"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivProfilePatientProfilePic"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/grey"
            android:scaleType="centerCrop"
            android:layout_marginTop="23dp"
            android:src="@drawable/ic_person_white"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientPatientProfile"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:shapeAppearanceOverlay="@style/ImageStyle_Circle" />

        <TextView
            android:id="@+id/tvProfilePatientName"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.49"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/ivProfilePatientProfilePic"
            tools:text="Patient name" />

        <TextView
            android:id="@+id/tvProfilePatientEmail"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProfilePatientName"
            app:layout_constraintStart_toStartOf="@+id/tvProfilePatientName"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientName"
            tools:text="patientEmail@gmail.com" />

        <TextView
            android:id="@+id/tvProfilePatientPhone"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProfilePatientEmail"
            app:layout_constraintStart_toStartOf="@+id/tvProfilePatientEmail"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientEmail"
            tools:text="+919876543210" />

        <TextView
            android:id="@+id/tvProfilePatientCaretakerName"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProfilePatientPhone"
            app:layout_constraintStart_toStartOf="@+id/tvProfilePatientPhone"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientPhone"
            tools:text="Caretaker name" />

        <TextView
            android:id="@+id/tvProfilePatientCaretakerEmail"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProfilePatientCaretakerName"
            app:layout_constraintStart_toStartOf="@+id/tvProfilePatientCaretakerName"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientCaretakerName"
            tools:text="Caretaker email" />

        <TextView
            android:id="@+id/tvProfilePatientCaretakerPhone"
            style="@style/TextAppearance.MaterialComponents.Body1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/white"
            android:textSize="14sp"
            app:layout_constraintEnd_toEndOf="@+id/tvProfilePatientCaretakerEmail"
            app:layout_constraintStart_toStartOf="@+id/tvProfilePatientCaretakerEmail"
            app:layout_constraintTop_toBottomOf="@id/tvProfilePatientCaretakerEmail"
            tools:text="Caretaker phone" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>